<?xml version='1.0' encoding='utf-8'?>
<widget id="com.jeremyeaton.eatornot" version="0.0.1" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>EatOrNot</name>
    <description>
        A Simple App that cuts the subjectivity of reviews and star ratings from Yelp (a distillation)
    </description>
    <author email="jeremyeaton89@gmail.com" href="http://jeremyeaton89.github.io">
        Apache Cordova Team
    </author>
    <content src="index.html" />
    <access origin="*" />

    <icon src='www/img/thumb-app-icon.png'/>

    <platform name='ios'>
      <splash src="www/img/thumbs-up.png" width="320" height="480"/>
      <splash src="www/img/thumbs-up.png" width="640" height="960"/>
      <splash src="www/img/thumbs-up.png" width="768" height="1024"/>
      <splash src="www/img/thumbs-up.png" width="1536" height="2048"/>
      <splash src="www/img/thumbs-up.png" width="1024" height="768"/>
      <splash src="www/img/thumbs-up.png" width="2048" height="1536"/>
      <splash src="www/img/thumbs-up.png" width="640" height="1136"/>
      <splash src="www/img/thumbs-up.png" width="750" height="1334"/>
      <splash src="www/img/thumbs-up.png" width="1242" height="2208"/>
      <splash src="www/img/thumbs-up.png" width="2208" height="1242"/>
    </platform>

    <platform name='android'>
      <splash src="www/img/thumbs-up.png" density="land-hdpi"/>
      <splash src="www/img/thumbs-up.png" density="land-ldpi"/>
      <splash src="www/img/thumbs-up.png" density="land-mdpi"/>
      <splash src="www/img/thumbs-up.png" density="land-xhdpi"/>
      <splash src="www/img/thumbs-up.png" density="port-hdpi"/>
      <splash src="www/img/thumbs-up.png" density="port-ldpi"/>
      <splash src="www/img/thumbs-up.png" density="port-mdpi"/>
      <splash src="www/img/thumbs-up.png" density="port-xhdpi"/>
    </platform>
    
</widget>
